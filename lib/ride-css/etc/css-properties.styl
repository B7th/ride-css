// positioning. If you are going to include NIB after Ride, these mixins will be overrided
--ride-setup-position(_position, $position)
  position: _position
  for $pos, $i in $position
    {$pos}: $position[$i + 1] if even($i) and $position[$i + 1] not undefined

absolute()
  --ride-setup-position: absolute arguments

fixed()
  --ride-setup-position: fixed arguments

relative()
  --ride-setup-position: relative arguments

// background shorthand
bkg()
  background: arguments if arguments
  
// background-color shorthand
bkgc($color)
  background-color: $color if type-of($color) is 'rgba'
  
// background-image shorthand
bkgi($url)
  background-color: url($url) if $url
  
// background-position shorthand
bkgp($position)
  background-position: $position
  
// background-size shorthand
bkgz($size)
  background-size: $size if $size
  
// border
bd($border)
  border: $border if $border
  
// color shorthand
cl($color)
  color: $color if type-of($color) is 'rgba'

// border-horizontal
border-horizontal()
  if length(arguments) == 1
    border-left: arguments
    border-right: arguments
  else
    border-left: arguments[0]
    border-right: arguments[1]

// border-horizontal
border-vertical(arguments)
  if length(arguments) == 1
    border-bottom: arguments
    border-top: arguments
  else
    border-bottom: arguments[0]
    border-top: arguments[1]

// full-size
full-size($size = 100%)
  height: $size
  width: $size

// margin-horizontal
margin-horizontal()
  if length(arguments) == 1
    margin-left: arguments 
    margin-right: @margin-left
  else  
    margin-left: arguments[1]
    margin-right: arguments[0]

// padding-vertical
margin-vertical()
  if length(arguments) == 1
    margin-bottom: arguments 
    margin-top: @margin-bottom
  else  
    margin-bottom: arguments[1]
    margin-top: arguments[0]

// padding-horizontal
padding-horizontal()
  if length(arguments) == 1
    padding-left: arguments 
    padding-right: @padding-left 
  else  
    padding-left: arguments[1]
    padding-right: arguments[0]

// padding-vertical
padding-vertical()
  if length(arguments) == 1
    padding-bottom: arguments 
    padding-top: @padding-bottom
  else  
    padding-bottom: arguments[1]
    padding-top: arguments[0]
