// positioning. If you are going to include NIB after Ride, these mixins will be overrided
--ride-setup-position(_position, $position)
  position: _position
  for $pos, $i in $position
    {$pos}: $position[$i + 1] if even($i) and $position[$i + 1] not undefined

absolute()
  --ride-setup-position: absolute arguments

fixed()
  --ride-setup-position: fixed arguments

relative()
  --ride-setup-position: relative arguments

clearfix()
  &:after
  &:before
    clear both
    content ''
    display table

dont-select()
  +cache('ride-dont-select')
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;  

reset-ul()
  ul
    margin 0
    padding @margin
    li
      margin @margin
      padding @padding
    
ride-body()
  html
  body
    height 100%
    width @height
  body
    {block}
    font-weight normal unless @font-weight
    font-size 62.5% unless @font-size
    line-height 1.5 unless @line-height

set-tooltip($data-attribute = data-tooltip)
  position: relative;
  &:before
    {block}
    absolute: top 0 right 0
    content attr($data-attribute);
    opacity 0;
    translateX(-50%) unless @transform;
    visibility hidden;
    white-space nowrap;
  &:hover:before
    opacity 1;
    translateX(0) unless @transform;
    visibility visible;

wrapper($class = '.wrap')
  {$class}
    {block}
    height 100% unless @height
    width 100% unless @width

// aliasing the wrapper mixin with wrap
ride-wrap = wrap = wrapper