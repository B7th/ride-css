ride-dialog($width = auto, $height = auto)
  absolute: top 50% left 50% @unless position
  box-sizing: border-box
  height: $height
  translate: -50% -50% @unless transform
  width: $width
  
ride-modal-panel($background, $opacity = 1)
  background: $background
  opacity: $opacity if $opacity not 1
  fixed: top 0 left 0
  ride-dialog: 100% 100%