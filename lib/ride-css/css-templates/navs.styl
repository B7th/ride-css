// ride-css default horizontal navigation
ride-table-nav($padding = false)
  display: table
  & > a
    display: table-cell
    padding: $padding if $padding not false

// ride-css default vertical navigation
ride-vertical-nav($padding = false)
  display: block unless @display
  & > a
    display: block
    padding: $padding if $padding not false
    line-height: 3 unless @line-height