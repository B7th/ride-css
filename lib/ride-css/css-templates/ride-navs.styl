site-nav(config = {})
  config.navClass = config.navClass || '.nav'
  config.navItem = config.navItem || '.item'
  config.orientation = config.orientation || '.horizontal'
  {config.navClass}
    {block}
    display table
    width 100% unless @width
    {config.navItem}
      button()
      vertical-align middle
    {config.navItem}
      display table-cell
    &{config.orientation} {config.navItem}
      display block