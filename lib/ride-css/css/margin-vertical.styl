// yelds a vertical margin (top, bottom)
// @param [Unit] $top this is the top (or top and left if $bottom is omitted) margin
// @param [Unit] $bottom this is the bottom margin
// @return [css]
margin-vertical($top, $bottom = false)
  if $bottom
    margin-bottom: $bottom
    margin-top: $top
  if !$bottom
    margin-bottom: $top
    margin-top: @margin-bottom
