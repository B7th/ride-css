ride-anchors($color, $light = false, $ratio = 21%, $class = 'a')
  --ride-anchors($color, $light, $ratio, $class)
      color: $color
      {block}
      text-decoration: none unless @text-decoration
      &:hover
        if !$light
          color: darken($color, $ratio)
        if $light
          color: lighten($color, $ratio)
      &:active
        if !$light
          color: darken($color, ($ratio + 8%))
        if $light
          color: lighten($color, ($ratio + 8%))
      &:visited
        color: $color
  if not property
    {$class}
      --ride-anchors: $color, $light, $ratio, $class
  else
    --ride-anchors: $color, $light, $ratio, $class

ride-underlined-anchors($color, $light = false, $ratio = 21%, $class = 'a')
  if not property
    {$class}
      ride-links: $color, $light, $ratio, $class
      text-decoration: underline
  else 
    ride-links: $color, $light, $ratio, $class
    text-decoration: underline

ride-links = ride-anchors
ride-underlined-links = ride-underlined-anchors