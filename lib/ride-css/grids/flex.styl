// first implementation
ride-flex-grid($columns, $margin, $padding, $class = '.ride-flex-grid')
  --ride-flex-grid($columns, $margin, $padding)
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: row
    flex-direction: row
    -webkit-flex-flow: row wrap
    flex-flow: row wrap
    > *
      padding: $padding
      flex-basis: 1
    for $column in 1..$columns
      /$flex-column-{$column}
        ride-column: 100%, $columns, $column, $margin, $padding
  if property
    --ride-flex-grid: $columns, $margin, $padding
  else
    {$class}
      --ride-flex-grid: $columns, $margin, $padding