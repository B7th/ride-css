use('grids.js')
// column mixin
// doesn't accept a code block
ride-column($width, $column-count = 1, $current-column = 1, $gutter = 0, $padding = 0)
  $column-unit = unit($width)
  $column = getColumn(parseFloat($width), $column-count, $current-column, s('%s', $gutter))
  $margin = $column.gutter
  $cols = $column.cols
  if $padding
    +cache('box-sizing')
      box-sizing border-box
  if $margin
    margin set-unit($margin, $column-unit)
  if $padding
    padding padding
  if $cols
    width set-unit($cols, $column-unit)

// floating column mixin
// doesn't accept a code block
ride-float($width, $column-count = 1, $current-column = 1, $gutter = 0, $margin-direction = 'left')
  $column-unit = unit($width)
  $column = getFloat(parseFloat($width), $column-count, $current-column, s('%s', $gutter))
  $float = $column.floats
  if $margin
    margin-{$margin-direction} set-unit($float, $column-unit)